/*导航-编辑*/
function nav_edit(title,url,id,w,h){
	var index = layer.open({
		type: 2,
		title: title,
		content: url
	});
	layer.full(index);
}
/*导航-删除*/
function nav_del(obj,id){
	var ids = new Array(id);
	layer.confirm('确认要删除吗？',function(index){
		$.ajax({
			type: 'POST',
			url: '/admin/nav',
			dataType: 'json',
			data:{
				id: ids
			},
			success: function(data){
				$(obj).parents("tr").remove();
				layer.msg(data['result'],{icon:1,time:1000});
			},
			error:function(data) {
				console.log(data.msg);
			},
		});		
	});
}
/*导航-批量删除*/
function datadel(){
	var arrId = [];
	var _len = <%- data.length%>;
	$.each($('input:checkbox'),function(){
        if(this.checked){
            arrId.push( $(this).attr('data-id') );
        }
    });
    arrId = arrId[0]==undefined ? arrId.slice(1) : arrId;
	$.ajax({
		type: 'POST',
		url: '/admin/nav',
		dataType: 'json',
		data:{
			id: arrId
		},
		success: function(data){
			layer.msg(data['result'],{icon:1,time:1000});
			setTimeout(function(){
				window.location.reload();
			},1000);
		},
		error:function() {
			console.log('删除失败！');
		},
	});
	
}

/*导航-审核*/
function nav_shenhe(obj,id){
	layer.confirm('审核导航？', {
		btn: ['通过','不通过','取消'], 
		shade: false,
		closeBtn: 0
	},
	function(){
		$(obj).parents("tr").find(".td-manage").prepend('<a class="c-primary" onClick="nav_start(this,id)" href="javascript:;" title="申请上线">申请上线</a>');
		$(obj).parents("tr").find(".td-status").html('<span class="label label-success radius">已发布</span>');
		$(obj).remove();
		layer.msg('已发布', {icon:6,time:1000});
	},
	function(){
		$(obj).parents("tr").find(".td-manage").prepend('<a class="c-primary" onClick="nav_shenqing(this,id)" href="javascript:;" title="申请上线">申请上线</a>');
		$(obj).parents("tr").find(".td-status").html('<span class="label label-danger radius">未通过</span>');
		$(obj).remove();
    	layer.msg('未通过', {icon:5,time:1000});
	});	
}
/*导航-下架*/
function nav_stop(obj,id){
	layer.confirm('确认要下架吗？',function(index){
		$(obj).parents("tr").find(".td-manage").prepend('<a style="text-decoration:none" onClick="nav_start(this,id)" href="javascript:;" title="发布"><i class="Hui-iconfont">&#xe603;</i></a>');
		$(obj).parents("tr").find(".td-status").html('<span class="label label-defaunt radius">已下架</span>');
		$(obj).remove();
		layer.msg('已下架!',{icon: 5,time:1000});
	});
}

/*导航-发布*/
function nav_start(obj,id){
	layer.confirm('确认要发布吗？',function(index){
		$(obj).parents("tr").find(".td-manage").prepend('<a style="text-decoration:none" onClick="nav_stop(this,id)" href="javascript:;" title="下架"><i class="Hui-iconfont">&#xe6de;</i></a>');
		$(obj).parents("tr").find(".td-status").html('<span class="label label-success radius">已发布</span>');
		$(obj).remove();
		layer.msg('已发布!',{icon: 6,time:1000});
	});
}
/*导航-申请上线*/
function nav_shenqing(obj,id){
	$(obj).parents("tr").find(".td-status").html('<span class="label label-default radius">待审核</span>');
	$(obj).parents("tr").find(".td-manage").html("");
	layer.msg('已提交申请，耐心等待审核!', {icon: 1,time:2000});
}

